<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="30" styleClass="root-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinicaveterinaria.meupetemdia.controller.LoginController">

    <!-- CABEÇALHO COM LOGO E TÍTULO -->
    <VBox alignment="CENTER" prefHeight="169.0" prefWidth="1024.0" spacing="10">
        <ImageView fx:id="imgLogo" fitHeight="80.0" fitWidth="80.0" preserveRatio="true">

             <image><Image url="@../img/logo.png" /></image>
        </ImageView>

        <Label fx:id="lblTitulo" styleClass="app-title" text="Meu Pet em Dia" />
        <Label fx:id="lblSubtitulo" styleClass="section-title" text="Sistema de Gestão Veterinária" />
    </VBox>

    <!-- CARD DO FORMULÁRIO DE LOGIN -->
    <VBox fx:id="vboxFormulario" alignment="CENTER" maxWidth="400" prefWidth="400" spacing="15" styleClass="card">
        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>

        <!-- TÍTULO DO FORMULÁRIO -->
        <Label styleClass="screen-title" text="Entrar no Sistema" />

        <!-- CAMPO E-MAIL -->
        <VBox spacing="5">
            <Label styleClass="form-label" text="E-mail:" />
            <TextField fx:id="txtEmail" promptText="Digite seu e-mail" styleClass="text-field" />
            <Label fx:id="lblErroEmail" managed="false" styleClass="error-label" visible="false" />
        </VBox>

        <!-- CAMPO SENHA -->
        <VBox spacing="5">
            <Label styleClass="form-label" text="Senha:" />
            <PasswordField fx:id="txtSenha" promptText="Digite sua senha" styleClass="password-field" />
            <Label fx:id="lblErroSenha" managed="false" styleClass="error-label" visible="false" />
        </VBox>

        <!-- BOTÃO ENTRAR -->
        <Button fx:id="btnEntrar" maxWidth="Infinity" onAction="#handleLogin" styleClass="primary-button" text="Entrar">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </Button>

        <!-- MENSAGEM DE ERRO GERAL -->
        <Label fx:id="lblErroGeral" managed="false" styleClass="error-label" textAlignment="CENTER" visible="false" wrapText="true" />

        <!-- INDICADOR DE CARREGAMENTO -->
        <ProgressIndicator fx:id="progressIndicator" managed="false" prefHeight="40.0" prefWidth="40.0" visible="false" />
    </VBox>

    <!-- RODAPÉ (OPCIONAL) -->
    <Label styleClass="info-label" text="© 2025 Clínica Veterinária - Todos os direitos reservados">
        <VBox.margin>
            <Insets top="30" />
        </VBox.margin>
    </Label>

</VBox>
